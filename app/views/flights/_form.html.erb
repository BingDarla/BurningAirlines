<%= form_for @flight, :class => "form-horizontal" do |f| %>
<fieldset class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control"  %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :row %>
  <%=  f.text_field :row, :class => "form-control" %>
</fieldset>
<fieldset class="form-group">
  <%= f.label :column %>
  <%= f.text_field :column, :class => "form-control"  %>
</fieldset>
<% end %>
