<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>

    <li><b>FLIGHT NO </b><%= flight.flight_number%>  <b> ORIGIN </b> <%= flight.origin %> <b> DESTINATION </b> <%= flight.destination %><%= link_to ' Show ', flight %> <%= link_to 'Edit ', edit_flight_path(flight) %> <%= link_to 'Destroy' , flight, method: :delete, data: { confirm: 'Are you sure?' } %></li> 

    <% end %>
  </tbody>
</table>

